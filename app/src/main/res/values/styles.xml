<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExtendView.DatePicker" parent="Theme.MaterialComponents.Light">
        <item name="colorControlNormal">@color/blue</item>
    </style>

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background_selector</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Small.PrimaryButton" parent="PrimaryButton">
        <item name="android:layout_width">91dp</item>
    </style>
</resources>